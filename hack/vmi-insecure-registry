sudo bash -c '
# create the new containerd style insecure registry
REGISTRY_DIR="/etc/containerd/certs.d/192.168.66.2:5000"
mkdir -p "$REGISTRY_DIR"

cat << EOF > "$REGISTRY_DIR/hosts.toml"
server = "http://192.168.66.2:5000"

[host."http://192.168.66.2:5000"]
  capabilities = ["pull", "resolve"]
  skip_verify = true
EOF

# Restart the service
systemctl restart containerd
'

